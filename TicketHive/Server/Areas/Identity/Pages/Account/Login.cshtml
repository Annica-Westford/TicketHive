@page
@model TicketHive.Server.Areas.Identity.Pages.Account.LoginModel
@{
}

<h1>Log in!</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <script>
        alert('@Model.Message');
    </script>
}

<form method="post">
    <label for="username-input">Username:</label>
    <input id="username-input" type="text" asp-for="Username" placeholder="Username" />
    <br />
    <label for="password-input">Password:</label>
    <input id="password-input" type="password" asp-for="Password" placeholder="Password" />
    <br />
    <input type="submit" value="Log In" />
    <div>
        <span class="text-danger" asp-validation-for="Username"></span>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
</form>

<style>
    form {
        width: 300px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fbe89c;
        border-radius: 5px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #305076;
    }

    input[type="text"],
    input[type="password"] {
        display: block;
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: none;
        border-radius: 3px;
    }

    input[type="submit"] {
        display: block;
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        background-color: #305076;
        color: #fbe89c;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        input[type="submit"]:hover {
            background-color: #203b56;
        }

    .text-danger {
        color: red;
        font-size: 12px;
    }
</style>